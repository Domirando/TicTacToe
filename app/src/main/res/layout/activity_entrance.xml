<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg1"
    android:layout_height="match_parent"
    tools:context=".Entrance">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <EditText
            android:id="@+id/player0_name"
            android:background="@color/white"
            android:layout_width="200dp"
            android:padding="3dp"
            android:layout_height="40dp"
            android:hint="Player 1"
            tools:ignore="MissingConstraints" />
        <EditText
            android:id="@+id/player1_name"
            app:layout_constraintTop_toBottomOf="@id/player0_name"
            android:background="@color/white"
            android:layout_width="200dp"
            android:padding="3dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:hint="Player 2"
            tools:ignore="MissingConstraints" />
        <Button
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/player1_name"
            app:layout_constraintEnd_toEndOf="@id/player1_name"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/player1_name"
            android:layout_height="wrap_content"
            android:text="Start!"
            android:id="@+id/start_game"
            tools:ignore="MissingConstraints" />
        <TextView
            app:layout_constraintTop_toBottomOf="@id/start_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>